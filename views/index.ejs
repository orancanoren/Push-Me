<!DOCTYPE html>
<html>
<head>
  <title>Push Me</title>
  <meta charset="utf-8" />
  <meta name="description" content="Come and Push!" />
  <meta author="Oran Can Ã–ren" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <% include util/formatDate.ejs %>
  <div class="container">
    <div class="header">
        Push Me<br />
        <p id="error"></p>
    </div>
    <div class="pushbutton_container">
      Let's Push<br />
      <i>Go on, push it!</i><br />
        <div id="pushbutton">
          PUSH!
        </div>
    </div>
    <div class="recent_push">
      <table>
        <thead>
          <tr>
            <td>Local Time</td>
            <td>Country</td>
            <td>City</td>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < pushes.length; i++) { %>
            <tr>
              <% var formattedDate = formatDate(pushes[i].date) %>
              <td> <%= formattedDate %> - <%= pushes[i].time %> </td>
              <td> <%= pushes[i].country %> </td>
              <td> <%= pushes[i].city %> </td>
            </tr>
        </tbody>
        <% } %>
      </table>
    </div>
  </div>
<div class="footer">
  <div id="oran">
    Brought to you by Oran
  </div>
</div>
<script type="text/javascript" src="bundle.js"></script>
</body>
</html>
